@model List<EmployeeSPApp.Models.Employee>

@{
	ViewData["Title"] = "Employee List";
	var employees = Model ?? new List<EmployeeSPApp.Models.Employee>();
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2>Employee List</h2>

<a asp-action="Create" class="btn btn-primary">+ Add New Employee</a>

<table class="table table-bordered mt-3">
	<thead>
		<tr>
			<th>Name</th>
			<th>Department</th>
			<th>Salary</th>
			<th style="width: 150px;">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var emp in employees)
		{
			<tr>
				<td>@emp.Name</td>
				<td>@emp.Department</td>
				<td>@emp.Salary</td>
				<td>
					<a asp-action="Edit" asp-route-id="@emp.EmpId" class="btn btn-sm btn-warning">Edit</a>
					<a asp-action="Delete" asp-route-id="@emp.EmpId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>